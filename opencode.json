{
    "$schema": "https://opencode.ai/config.json",
    "permission": {
        "bash": {
            "*": "ask",
            "cat *": "allow",
            "curl *": "allow",
            "gh release *": "ask",
            "git diff *": "allow",
            "git fetch *": "allow",
            "git log *": "allow",
            "git show *": "allow",
            "git status *": "allow",
            "grep *": "allow",
            "kubectl get secret *": "ask",
            "kubectl get secrets *": "ask",
            "kubectl get *": "allow",
            "kubectl logs *": "allow",
            "ls *": "allow",
            "npm run lint": "allow",
            "npm run test": "allow",
            "npm test": "allow",
            "pulumi * --show-secrets *": "ask",
            "pulumi config": "allow",
            "pulumi preview *": "ask",
            "pwd": "allow",
            "sleep *": "allow",
            "tail *": "allow"
        },
        "read": {
            "Pulumi.*.yaml": "deny"
        },
        "edit": {
            "*": "ask",
            "Pulumi.*.yaml": "deny",
            "node_modules/*": "deny"
        }
    }
}
